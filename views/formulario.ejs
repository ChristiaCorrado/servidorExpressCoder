<header>
  <%- include('./partials/encabezado.ejs'); %>
</header>
<body>
<div class="container mt-3">
  <div class="jumbotron">
    <h1 style="color: blue">Ingrese Productos</h1>
    <br />

    <form action="productos" method="post">
      <div class="form-group">
        <label for="title"><b>Nombre</b></label>
        <input id="title" class="form-control" type="text" name="title" />
      </div>

      <div class="form-group">
        <label for="price"><b>Precio</b></label>
        <input
          id="price"
          class="form-control"
          type="number"
          name="price"
        />
      </div>

      <div class="form-group">
        <label for="thumbnail"><b>Foto URL</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail" />
      </div>

      <button class="btn btn-success mt-3 mb-5">Enviar</button>
    </form>

    <h2 style="color: crimson">Vista de productos</h2>
    <%- include('./partials/tablaProductos.ejs', {allProducts}); %>
  </div>
</div>
</body>
<%- include('./partials/pie.ejs'); %>